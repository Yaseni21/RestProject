<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.restproject">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestProject"
        tools:targetApi="31">
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.SignUpActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".controller.ColdDrinksActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".controller.aboutActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".controller.CategoriesActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".controller.EmployeeRegisterActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>